{
  "name": "baave-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx hardhat typechain && npm run submodule-pull && npm run build-protocol-v2",
    "submodule-pull": "git submodule update --init --recursive",
    "test": "npx hardhat test --network ganache",
    "clear-snapshot": "rimraf snapshot && unzip -q snapshot.zip",
    "ganache": "npm run clear-snapshot && npx ganache-cli --db './snapshot' -m 'fox sight canyon orphan hotel grow hedgehog build bless august weather swarm'",
    "build-protocol-v2": "cd protocol-v2 && npm i && npm run compile && npx hardhat typechain"
  },
